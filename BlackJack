import java.util.Scanner;
import java.util.Random;

class Main {
  public static void main(String[] args) {
    Scanner sc = new Scanner(System.in); //Scanner 객체 생성
    Card card = new Card();
    
    System.out.println("블랙 잭 게임 입니다!!");
    for(int a = 0; a < 5; a++){
      card.valueSum();
      System.out.println();
    }
  }
  
}

class Card {
  Random random = new Random(); //Random 객체 생성
  int valueSum = 0;
  
  public int drowing(){
    System.out.println("카드를 뽑습니다.");
    int i = (random.nextInt(13)+1);
    System.out.println("나온 카드 값 :" + i);
    return i;
  }
  
  public void valueSum(){
    valueSum += drowing();
    System.out.println("나온 카드 값들의 합 :" + valueSum);
  }
}

//값을 받은 카드값의 합을 구현해야 함
//

//블랙 잭 룰
//1. 게임이 끝날때 카드의 합이 16이상 21이하 이여야 함
//2. 21이 넘어가면 버스트
//3. 처음에 카드 두장을 받고 부족하면 추가로 더 받을수 있음
//4. J, Q, K는 10으로 계산
//5. A는 1, 11 선택 가능
